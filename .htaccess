<IfModule mod_expires.c>
    ExpiresActive On

    # CSS: 2 semanas
    ExpiresByType text/css "access plus 2 weeks"

    # JS: 1 mes
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(css)$">
        Header set Cache-Control "public, max-age=1209600"  # 2 semanas
    </FilesMatch>

    <FilesMatch "\.(js)$">
        Header set Cache-Control "public, max-age=2592000"  # 1 mes
    </FilesMatch>
</IfModule>